#!/usr/bin/env python

"""
RTL Synthesis-Implementation Manager
"""

from rsi_utils import *
import argparse

if __name__ == '__main__' :
  # Get the Argument Parser
  parser = init_argparser()

  args = parser.parse_args()

  # Initializer logger
  init_logger(args.debug, args.logfile)

  # Check in a run directory
  if (not path_is_parent(os.path.join(os.getenv('BASE_DIR'), "run"), os.getcwd())) :
    logging.critical("Not In Run Dir!"))

  # Handle the Various Commands
  if (args.cmd == "build") :
    build_compile = BuildCompile(args.board)
    build_compile.build()
  elif (args.cmd == "")